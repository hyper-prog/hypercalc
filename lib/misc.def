define quadratic_formula1(a,b,c) = (-b+sqrt(b*b-4*a*c))/2*a   # Quadratic formula's first result
define quadratic_formula2(a,b,c) = (-b-sqrt(b*b-4*a*c))/2*a   # Quadratic formula's first result

define sphere_area(r)           = 4*PI*r*r         # Surface area of sphere
define sphere_volume(r)         = (4/3)*PI*r^3     # Enclosed volume of sphere
define circularcone_area(r,h)   = PI*r*(r+h)       # Surface area of circular cone
define circularcone_volume(r,h) = (1/3)*PI*r^2*h   # Enclosed volume of circular cone
